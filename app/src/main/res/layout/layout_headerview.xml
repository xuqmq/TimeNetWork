<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:background="@drawable/comments_background"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">
           <EditText
           android:layout_marginRight="20dp"
           android:layout_marginLeft="20dp"
           android:id="@+id/et_header"
           android:background="@drawable/edittext_shape"
           android:maxLength="10"
           android:textColor="#88888888"
           android:drawableLeft="@drawable/title_bar_search_zoomin"
           android:paddingLeft="15dp"
           android:hint="输入城市名"
           android:layout_weight="5"
           android:layout_width="0dp"
           android:layout_height="match_parent" />
          <Button
           android:clickable="true"
           android:background="@null"
           android:text="取消"
           android:visibility="gone"
           android:layout_marginRight="10dp"
           android:textColor="#88888888"
           android:id="@+id/btn_header"
           android:layout_weight="1"
           android:layout_width="0dp"
           android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/comments_background"
        android:id="@+id/ll_header"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:background="@drawable/comments_background"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:textSize="15sp"
        android:paddingLeft="15dp"
        android:text="当前定位"
        android:layout_width="match_parent"
        android:layout_height="30dp" />
    <TextView
        android:background="@drawable/comments_background"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:textSize="15sp"
        android:paddingLeft="15dp"
        android:text="热门城市"
        android:layout_width="match_parent"
        android:layout_height="30dp" />
    <com.bowen.timenetwork.view.MyGridView
        android:numColumns="4"
        android:stretchMode="columnWidth"
        android:layout_gravity="center_horizontal"
        android:id="@+id/gv_header"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.bowen.timenetwork.view.MyGridView>
    </LinearLayout>
</LinearLayout>

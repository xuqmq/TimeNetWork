<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
<ImageView
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:id="@+id/iv_view_one_item"
    android:src="@drawable/white_btn"
    android:layout_width="100dp"
    android:layout_height="150dp" />
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_view_one_item"
        android:layout_alignTop="@id/iv_view_one_item"
        android:layout_alignBottom="@id/iv_view_one_item"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="150dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:id="@+id/tv_one_move_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:visibility="gone"
            android:gravity="center"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="15dp"
            android:layout_marginLeft="3dp"
            android:id="@+id/tv_one_ra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="15sp"
            android:id="@+id/tv_one_common_special"
            android:layout_width="wrap_content"
            android:layout_height="0dp" />
        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="10sp"
            android:id="@+id/tv_one_rdata"
            android:layout_width="wrap_content"
            android:layout_height="0dp" />
        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="10sp"
            android:id="@+id/tv_one_all_ccd"
            android:layout_width="wrap_content"
            android:layout_height="0dp" />
        <LinearLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="0dp">
            <ImageView
                android:id="@+id/iv_one_3d"
                android:src="@drawable/rectangle3d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginLeft="5dp"
                android:id="@+id/iv_one_imax"
                android:src="@drawable/rectangleimax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_marginLeft="5dp"
                android:id="@+id/iv_one_larget"
                android:src="@drawable/rectanglelarget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <Button
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignBottom="@id/iv_view_one_item"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>